<div id="<%= dom_id league %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= league.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Logo:</strong>
    <%= image_tag(league.logo) %>
    <%= league.logo %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= league.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reference:</strong>
    <%= league.reference %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this league", league, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this league", edit_league_path(league), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
