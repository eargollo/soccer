<div class="flex flex-col items-center justify-center w-screen min-h-screen bg-white py-0">
    <h1>League: <%= @league.name %></h1>
    <table>
        <tr>
            <th>Seasons</th>
            <th>Refresh</th>
        </tr>
        <% @seasons.each do |season| %>
            <tr>
                <td><%= season.year %></td>
                <td>
                    <%= form_with url: admin_season_path(season.id), method: :patch do |f| %>
                        <%= f.hidden_field :type, value: 'async' %>
                        <%= f.submit "Schedule", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
                    <% end %>
                </td>
                <td>
                    <%= form_with url: admin_season_path(season.id), method: :patch do |f| %>
                        <%= f.hidden_field :type, value: 'sync' %>
                        <%= f.submit "Sync", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
                    <% end %>
                </td>
                <td>
                    <%= form_with url: admin_season_path(season.id), method: :patch do |f| %>
                        <%= f.hidden_field :type, value: 'close' %>
                        <% title = season.active ? "Close" : "Open" %>
                        <%= f.submit title, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>
