<%# Mobile Menu - Slide-in drawer with hamburger %>
<div data-controller="mobile-menu">
  <!-- Mobile Header (Top Bar) -->
  <header class="lg:hidden fixed top-0 left-0 right-0 h-14 bg-emerald-700 text-white z-50 flex items-center justify-between px-4 safe-area-top">
    <!-- Hamburger Menu Button -->
    <button
      type="button"
      data-mobile-menu-target="hamburger"
      data-action="click->mobile-menu#toggle"
      aria-expanded="false"
      aria-label="Toggle menu"
      class="w-10 h-10 flex flex-col justify-center items-center gap-1.5 focus:outline-none focus:ring-2 focus:ring-lime-400 focus:ring-offset-2 focus:ring-offset-emerald-700 rounded-md"
    >
      <span class="hamburger-line w-6 h-0.5 bg-white transition-all duration-300"></span>
      <span class="hamburger-line w-6 h-0.5 bg-white transition-all duration-300"></span>
      <span class="hamburger-line w-6 h-0.5 bg-white transition-all duration-300"></span>
    </button>

    <!-- League Name (Center) -->
    <div class="flex-1 text-center px-2">
      <span class="font-semibold text-base truncate block">
        <% if current_league %>
          <%= current_league.name %>
        <% else %>
          All Leagues
        <% end %>
      </span>
    </div>

    <!-- User Icon (Right) -->
    <div class="w-10 h-10 flex items-center justify-center">
      <% if user_signed_in? %>
        <div class="w-8 h-8 rounded-full bg-emerald-600 flex items-center justify-center">
          <span class="text-white font-semibold text-xs">
            <%= current_user.name.split.map(&:first).join.upcase[0..1] %>
          </span>
        </div>
      <% else %>
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      <% end %>
    </div>
  </header>

  <!-- Backdrop/Overlay -->
  <div
    data-mobile-menu-target="backdrop"
    class="hidden fixed inset-0 bg-black/50 z-40 transition-opacity duration-300"
    aria-hidden="true"
  ></div>

  <!-- Slide-in Drawer -->
  <aside
    data-mobile-menu-target="drawer"
    aria-hidden="true"
    class="fixed inset-y-0 left-0 w-72 bg-white shadow-2xl z-50 transform -translate-x-full transition-transform duration-300 ease-in-out overflow-y-auto safe-area-left"
  >
    <div class="flex flex-col h-full">
      <!-- Drawer Header -->
      <div class="bg-emerald-700 text-white p-4 safe-area-top flex items-center justify-between">
        <h2 class="font-semibold text-lg">Menu</h2>
        <button
          type="button"
          data-action="click->mobile-menu#close"
          aria-label="Close menu"
          class="w-10 h-10 flex items-center justify-center rounded-md hover:bg-emerald-600 active:bg-emerald-500 transition-colors focus:outline-none focus:ring-2 focus:ring-lime-400 focus:ring-offset-2 focus:ring-offset-emerald-700"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- League Selector Section -->
      <div class="border-b border-gray-200 p-4">
        <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">League</div>
        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            data-dropdown-target="button"
            data-action="click->dropdown#toggle"
            class="w-full flex items-center justify-between px-3 py-3 text-base text-left bg-gray-50 rounded-lg hover:bg-gray-100 active:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-colors"
          >
            <span class="font-medium text-gray-900">
              <% if current_league %>
                <%= current_league.name %>
              <% else %>
                All Leagues
              <% end %>
            </span>
            <svg class="chevron w-4 h-4 text-gray-500 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            data-dropdown-target="menu"
            class="hidden absolute top-full left-0 right-0 mt-1 bg-white rounded-lg shadow-xl border border-gray-200 py-2 z-50 max-h-64 overflow-y-auto"
          >
            <%= link_to leagues_path, class: "block px-4 py-3 text-base text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-100 font-semibold' if current_league.nil?}" do %>
              <div class="flex items-center justify-between">
                <span>All Leagues</span>
                <% unless current_league %>
                  <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                <% end %>
              </div>
            <% end %>
            <div class="border-t border-gray-200 my-2"></div>
            <% all_leagues.each do |league| %>
              <%= link_to league_standings_path(league), class: "block px-4 py-3 text-base text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-100 font-semibold' if current_league&.id == league.id}" do %>
                <div class="flex items-center justify-between">
                  <span><%= league.name %></span>
                  <% if current_league&.id == league.id %>
                    <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Navigation Items -->
      <nav class="flex-1 py-2">
        <%= link_to menu_path_for(:classificacao), 
            class: "flex items-center px-4 py-4 text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-50 border-l-4 border-emerald-600' if menu_item_active?(:classificacao)}",
            data: { action: "click->mobile-menu#handleLinkClick" } do %>
          <span class="font-medium">Classificação</span>
        <% end %>
        
        <%= link_to menu_path_for(:tabela), 
            class: "flex items-center px-4 py-4 text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-50 border-l-4 border-emerald-600' if menu_item_active?(:tabela)}",
            data: { action: "click->mobile-menu#handleLinkClick" } do %>
          <span class="font-medium">Tabela</span>
        <% end %>
        
        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            data-dropdown-target="button"
            data-action="click->dropdown#toggle"
            class="w-full flex items-center justify-between px-4 py-4 text-left text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors focus:outline-none"
          >
            <span class="font-medium">Ranking</span>
            <svg class="chevron w-4 h-4 text-gray-500 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            data-dropdown-target="menu"
            class="hidden absolute top-full left-0 right-0 mt-1 bg-white rounded-lg shadow-xl border border-gray-200 py-2 z-50"
          >
            <%= link_to menu_path_for(:pontos), class: dropdown_item_classes(active: menu_item_active?(:pontos)) do %>
              Pontos
            <% end %>
          </div>
        </div>
        
        <%= link_to menu_path_for(:temporadas), 
            class: "flex items-center px-4 py-4 text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-50 border-l-4 border-emerald-600' if menu_item_active?(:temporadas)}",
            data: { action: "click->mobile-menu#handleLinkClick" } do %>
          <span class="font-medium">Temporadas</span>
        <% end %>
        
        <%= link_to menu_path_for(:times), 
            class: "flex items-center px-4 py-4 text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 transition-colors #{'bg-emerald-50 border-l-4 border-emerald-600' if menu_item_active?(:times)}",
            data: { action: "click->mobile-menu#handleLinkClick" } do %>
          <span class="font-medium">Times</span>
        <% end %>
      </nav>

      <!-- User Section (Bottom) -->
      <div class="border-t border-gray-200 p-4 mt-auto safe-area-bottom">
        <% if user_signed_in? %>
          <div class="mb-4">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 rounded-full bg-emerald-600 flex items-center justify-center">
                <span class="text-white font-semibold text-base">
                  <%= current_user.name.split.map(&:first).join.upcase[0..1] %>
                </span>
              </div>
              <div>
                <div class="font-medium text-base text-gray-900"><%= current_user.name %></div>
                <div class="text-sm text-gray-500"><%= current_user.email %></div>
              </div>
            </div>
          </div>
          <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Admin</div>
          <%= link_to admin_leagues_path, class: "block px-4 py-3 text-base text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 rounded-md transition-colors" do %>
            League
          <% end %>
          <%= link_to simulations_path, class: "block px-4 py-3 text-base text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 rounded-md transition-colors" do %>
            Simulations
          <% end %>
          <div class="border-t border-gray-200 my-2"></div>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete,
              class: "w-full text-left px-4 py-3 text-base text-gray-900 hover:bg-emerald-50 active:bg-emerald-100 rounded-md transition-colors",
              form: { class: "m-0" } %>
        <% else %>
          <%= link_to new_user_session_path, class: "block px-4 py-3 text-base font-medium text-emerald-700 hover:bg-emerald-50 active:bg-emerald-100 rounded-md transition-colors" do %>
            Sign In
          <% end %>
        <% end %>
      </div>
    </div>
  </aside>
</div>

