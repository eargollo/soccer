<%= link_to team_path(team), class: "block" do %>
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow cursor-pointer">
    <div class="flex items-center space-x-4 mb-4">
      <% if team.logo.present? %>
        <img src="<%= team.logo %>" alt="<%= team.name %>" class="w-16 h-16 object-contain flex-shrink-0">
      <% else %>
        <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-gray-400 text-xs font-semibold"><%= team.name[0..1].upcase %></span>
        </div>
      <% end %>
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-semibold text-gray-900 truncate"><%= team.name %></h3>
      </div>
    </div>
    
    <div class="space-y-3 pt-4 border-t border-gray-200">
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Temporadas</span>
        <span class="text-sm font-semibold text-gray-900"><%= seasons_played %></span>
      </div>
      
      <% if last_season.present? %>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Ãšltima Temporada</span>
          <span class="text-sm font-semibold text-gray-900"><%= last_season %></span>
        </div>
      <% end %>
      
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-600">Rendimento</span>
        <span class="text-sm font-semibold text-emerald-600">
          <%= number_with_precision(points_rate, precision: 2) %>%
        </span>
      </div>
    </div>
  </div>
<% end %>

